{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "I am definitely not a virus; I am just Lain. Trust me.",
  "version": "0.1.0",
  "identifier": "com.system-monitoring-dashboard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "system_monitoring_dashboard",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/lain.png", "icons/lain.icns", "icons/lain.ico"]
  }
}
